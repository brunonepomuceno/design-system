{
  "name": "@fretebras/icon-package",
  "version": "1.0.0",
  "description": "Icon package for Fretebras Design System",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "rollup -c",
    "prepare": "npm run build",
    "extract": "export $(cat ~/.figma-token | xargs) && node scripts/extractIcons.js",
    "preview": "npm run generate:preview && open preview/index.html",
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "generate": "npm run generate:icons && npm run generate:components && npm run generate:css && npm run generate:docs",
    "generate:icons": "export $(cat ~/.figma-token | xargs) && node scripts/extractIcons.js",
    "generate:components": "node scripts/generateReactComponents.js",
    "generate:css": "node scripts/generateCSS.js",
    "generate:docs": "node scripts/generateDocumentation.js",
    "generate:preview": "ts-node scripts/generatePreview.tsx",
    
    "clean": "rimraf dist preview assets/icons/*.json assets/icons/*.md ICON_DOCS.md",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run generate"
  },
  "keywords": [
    "icons",
    "fretebras",
    "design-system"
  ],
  "author": "Fretebras",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@types/node": "^18.19.103",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^19.1.5",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.6.9",
    "nodemon": "^2.0.22",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "svgo": "^3.3.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
